{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src", // This must be specified if "paths" is.
    "paths": {
        "@config/*": ["config/*"],
        "@interfaces/*": ["interfaces/*"],
        "@templates/*": ["templates/*"],
        "@util/*": ["util/*"],
        "@commands/*": ["commands/*"],
        "@snippets/*": ["snippets/*"],
        "@builders/*": ["builders/*"]
    },
  },
  "lib": ["es2015"]
}

